<div class="row-fluid" id="contact">
	<div class="span6">

	<h2>Get In Touch </h2>
		{% include 'OpenDeviceLabApplicationBundle::flashes.html.twig' %}
		<p>If you are interested in what we do, have suggestions, want to help or have any other general questions please feel free to use the form to the right.</p>
		<address>
			<i>
			14 Lafayette Sq. unit 1807<br>
			Buffalo, New York<br>
			14222<br>
			</i>
		</address>
		<span class="muted"><i>- Buffalo, ODL Team</i></span>
	</div>
	<div class="span6">
				{{ form_start(contact) }}
			{{ form_errors(contact) }}	
			<fieldset>
				<div class="row-fluid">
					<div class="span4">
						{{ form_label(contact.first_name) }}
					</div>
					<div class="span8">
						{{ form_widget(contact.first_name, { attr: { class: "input-block-level" } }) }}
					</div>
				</div>
				<div class="row-fluid">
					<div class="span4">
						{{ form_label(contact.last_name) }}
					</div>
					<div class="span8">
						{{ form_widget(contact.last_name, { attr: { class: "input-block-level" } }) }}
					</div>
				</div>
				
				<div class="row-fluid">
					<div class="span4">
						{{ form_label(contact.email) }}
					</div>
					<div class="span8">
						{{ form_widget(contact.email, { attr: { class: "input-block-level" } }) }}
					</div>
				</div>
				<div class="row-fluid">
					<div class="span4">
						{{ form_label(contact.message) }}
					</div>
				</div>
				<div class="row-fluid">
					{{ form_widget(contact.message, { attr: { class: "input-block-level" } }) }}
				</div>
				<div class="row-fluid">
					{{ form_widget(contact.captcha) }}
				</div>
			</fieldset>
			<button type="submit" class="btn btn-primary pull-right">Submit</button>
		{{ form_end(contact) }}
	</div>
</div>
