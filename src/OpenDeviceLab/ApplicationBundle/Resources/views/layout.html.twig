	{% block stylesheets %}
		<link href='http://fonts.googleapis.com/css?family=Exo|Alegreya:700|Armata|Orbitron:700' rel='stylesheet' type='text/css'>
		<link rel="stylesheet" href="{{ asset('/bundles/twitter/bootstrap/docs/assets/css/bootstrap.css') }}">
