{% extends 'OpenDeviceLabAdminBundle::layout.html.twig' %}
{% block layout_extend %}
	<div class="row-fluid logo">
		<h1>Buffalo <span>ODL</span> Admin</h1>
	</div>
	<div class="row-fluid">
		<ul class="nav nav-tabs">
			<li {% if active == 'home' %}class="active" {% endif %}>
				<a href="{{ path('admin_index') }}">Home</a>
			</li>
			<li {% if active == 'users' %}class="active" {% endif %}>
				<a href="{{ path('admin_user_list') }}">Users</a>
			</li>
			<li {% if active == 'devices' %}class="active" {% endif %}>
				<a href="{{ path('admin_device_list') }}">Devices</a>
			</li>
		</ul>
	</div>
	<div class="row-fluid">
		{% include 'OpenDeviceLabApplicationBundle::flashes.html.twig' %}
	</div>
	<div id="content">
		{% block body %}
		{% endblock %}
	</div>
{% endblock %}
