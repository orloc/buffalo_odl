{% set active = 'users' %}
{% extends 'OpenDeviceLabAdminBundle:Panel:landing.html.twig' %}

{% block body %}
	<table class="table table-bordered table-stripped table-hover">
		<thead>
			<tr>
				<th>
					First Name
				</th>
				<th>
					Last Name
				</th>
				<th>
					E-Mail
				</th>
				<th>
					Role
				</th>
			</tr>
		</thead>
		<tbody>
		 {% for user in users %}
			<tr>
				<td>
					{{ user.getFirstName() }}
				</td>
				<td> 
					{{ user.getLastName() }}
				</td>
				<td>
					<a href="{{ path('admin_user_detail', { id: user.getId() }) }}">{{ user.getEmail() }}</a>
				</td>
				<td>
					{% for role in user.getRoles() %}
						{{ role}},
					{% endfor %}
				</td>
			</tr>
		{% endfor %}
		</tbody>
	</table>
{% endblock %}
