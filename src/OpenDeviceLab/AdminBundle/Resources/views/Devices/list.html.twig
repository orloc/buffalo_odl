{% set active = 'devices' %}
{% extends 'OpenDeviceLabAdminBundle:Panel:landing.html.twig' %}

{% block body %}
	<div class="row-fluid">
		<a class="btn btn-small pull-right" href="{{ path('admin_device_create') }}"><i class="icon-plus"></i> Add a Device</a>
	</div>
	<div class="row-fluid">
		<table id="list" class="table table-bordered table-stripped table-hover">
			<thead>
				<tr>
					<th>
						Manufacturer
					</th>
					<th>
						Model
					</th>
					<th>
						OS
					</th>
					<th>
						Donated By
					</th>
					<th>
						Created At
					</th>
					<th>
						Status
					</th>
				</tr>
			</thead>
			<tbody>
			 {% for device in devices %}
				<tr>
					<td>
						{{ device.getManufacturer() }}
					</td>
					<td> 
						<a href="{{ path('admin_device_detail', { id: device.getId() })}}">{{ device.getModel() }}</a>
					</td>
					<td>
						{{ device.getOperatingSystem() }}
					</td>
					<td>
						{{ device.getDonatedBy() }}
					</td>
					<td>
						{{ device.getCreatedAt() | date('m/d/Y') }}
					</td>
					<td>
						<span class="label {% if device.getStatus() == 1%}label-success {% else %} label-warning {% endif %}">{{ device.getNiceStatus() }}</span>
					</td>
				</tr>
			{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
