<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

    <title>Buffalo ODL - Admin</title>

    <meta name="description" content="">
    <meta name="author" content="">
    <meta name="viewport" content="width=device-width">

	{% block stylesheets %}

		<link href='http://fonts.googleapis.com/css?family=Orbitron:700' rel='stylesheet' type='text/css'>
		<link rel="stylesheet" href="{{ asset('/bundles/twitter/bootstrap/docs/assets/css/bootstrap.css') }}">
		<link rel="stylesheet" href="{{ asset('/assets/admin/css/styles.css') }}">
	{% endblock %}

</head>
<body>
<!--[if lt IE 7]><p class=chromeframe>Your browser is <em>ancient!</em> <a href="http://browsehappy.com/">Upgrade to a different browser</a> or <a href="http://www.google.com/chromeframe/?redirect=true">install Google Chrome Frame</a> to experience this site.</p><![endif]-->
	<div id="wrapper" class="container-fluid">
    {% set active = active|default(null) %}
		<div class="row-fluid logo">
			<h1>Buffalo <span>ODL</span> Admin</h1>
		</div>
		<div class="row-fluid">
			<ul class="nav nav-tabs">
				<li {% if active == 'home' %}class="active" {% endif %}>
					<a href="{{ path('admin_index') }}">Home</a>
				</li>
				<li {% if active == 'users' %}class="active" {% endif %}>
					<a href="{{ path('admin_user_list') }}">Users</a>
				</li>
				<li {% if active == 'devices' %}class="active" {% endif %}>
					<a href="{{ path('admin_device_list') }}">Devices</a>
				</li>
			</ul>
		</div>
		<div class="row-fluid">
			{% for alert_cat in [ 'info', 'success', 'warning', 'error'] %}
			{% if app.session.FlashBag.has(alert_cat) %}
			{% for alert in app.session.flashbag.get(alert_cat) %} 
			<div class="alert alert-{{ alert_cat }}" >
				<button class="close" data-dismiss="alert">Ã—</button>
				{{ alert|trans }}
			</div>
			{% endfor %}
			{% endif %}
			{% endfor %}
		</div>


		<div id="content">
			{% block body %}
			{% endblock %}
		</div>

		{% block javascripts %}
			<script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
		{% endblock %}
	</div>
</body>
</html>
